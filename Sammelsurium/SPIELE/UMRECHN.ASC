1520 IF IN=83 THEN GOSUB 2410:GOTO 1330
1530 IF (IN<49) OR (IN>53) THEN 1510
1540 IN=IN-48
1550 ON IN GOTO 1560,1690,1820,1950,2080
1560 GOSUB 100
1570 PRINT"Umrechnen von Masseneinheiten":PRINT
1580 FOR Z=1 TO 10
1590 GOSUB 260:X1=INT(1+5*RV)
1600 GOSUB 260:X2=INT(1+5*RV)
1610 IF (ABS(X1-X2)>SW) OR (X1=X2) THEN 1600
1620 GOSUB 260:X3=INT(1+100*RV)
1630 GOSUB 260:X3=X3*ZP(INT(1+RV*7))
1640 X4=X3*MM(X1)/MM(X2)
1650 PRINT" Wieviel ";MM$(X1);" sind ";X4;MM$(X2);" ?";
1660 GOSUB 2230
1670 NEXT Z
1680 GOTO 2310
1690 GOSUB 100
1700 PRINT"Umrechnen von Laengeneinheiten":PRINT
1710 FOR Z=1 TO 10
1720 GOSUB 260:X1=INT(1+5*RV)
1730 GOSUB 260:X2=INT(1+5*RV)
1740 IF (ABS(X1-X2)>SW) OR (X1=X2) THEN 1730
1750 GOSUB 260:X3=INT(1+100*RV)
1760 GOSUB 260:X3=X3*ZP(INT(1+RV*7))
1770 X4=X3*LM(X1)/LM(X2)
1780 PRINT" Wieviel ";LM$(X1);" sind ";X4;LM$(X2);" ?";
1790 GOSUB 2230
1800 NEXT Z
1810 GOTO 2310
1820 GOSUB 100
1830 PRINT"Umrechnen von Flaecheneinheiten":PRINT
1840 FOR Z=1 TO 10
1850 GOSUB 260:X1=INT(1+7*RV)
1860 GOSUB 260:X2=INT(1+7*RV)
1870 IF (ABS(X1-X2)>SW) OR (X1=X2) THEN 1860
1880 GOSUB 260:X3=INT(1+100*RV)
1890 GOSUB 260:X3=X3*ZP(INT(1+RV*7))
1900 X4=X3*FM(X1)/FM(X2)
1910 PRINT" Wieviel ";FM$(X1);" sind ";X4;FM$(X2);" ?";
1920 GOSUB 2230
1930 NEXT Z
1940 GOTO 2310
1950 GOSUB 100
1960 PRINT"Umrechnen von Volumeneinheiten":PRINT
1970 FOR Z=1 TO 10
1980 GOSUB 260:X1=INT(1+6*RV)
1990 GOSUB 260:X2=INT(1+6*RV)
2000 IF (ABS(X1-X2)>SW) OR (X1=X2) THEN 1990
2010 GOSUB 260:X3=INT(1+100*RV)
2020 GOSUB 260:X3=X3*ZP(INT(1+RV*7))
2030 X4=X3*RM(X1)/RM(X2)
2040 PRINT" Wieviel ";RM$(X1);" sind ";X4;RM$(X2);" ?";
2050 GOSUB 2230
2060 NEXT Z
2070 GOTO 2310
2080 GOSUB 100
2090 PRINT"Umrechnen der Vorsaetze ":PRINT
2100 FOR Z=1 TO 10
2110 GOSUB 260:X1=INT(1+17*RV)
2120 GOSUB 260:X2=INT(1+17*RV)
2130 IF (ABS(X1-X2)>SW) OR (X1=X2) THEN 2120
2140 GOSUB 260:X3=INT(1+100*RV)
2150 GOSUB 260:X3=X3*ZP(INT(1+RV*7))
2160 IF (X1=1) AND (X2=17) AND (X3>127) THEN 2140:REM 1.27E+38
2170 X4=X3*VS(X1)/VS(X2)
2180 PRINT" Wieviel ";VS$(X1);" sind ";X4;VS$(X2);" ?";
2190 GOSUB 2230
2200 NEXT Z
2210 GOTO 2310
