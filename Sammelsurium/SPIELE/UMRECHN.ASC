1000 A=500:GOTO 20:REM ## Umrechnungsuebung von Einh.  ##
1010 REM #### VEREINBARUNGEN ####
1020 PRINT:PRINT:PRINT:PRINT"           Moment bitte !"
1030 HH=HO:VV=VE:PU=0:SW=1
1040 DIM MM$(10),LM$(10),FM$(10),RM$(10),VS$(20)
1050 DIM MM(10),LM(10),FM(10),RM(10),VS(20),ZP(10)
1060 FOR I=1 TO 5
1070 READ MM$(I),MM(I)
1080 NEXT I
1090 FOR I=1 TO 5
1100 READ LM$(I),LM(I)
1110 NEXT I
1120 FOR I=1 TO 7
1130 READ FM$(I),FM(I)
1140 NEXT I
1150 FOR I=1 TO 6
1160 READ RM$(I),RM(I)
1170 NEXT I
1180 FOR I=1 TO 17
1190 READ VS$(I),YY:VS(I)=1
1200 IF YY=0 THEN 1250
1210 FOR II=1 TO ABS(YY)
1220 IF YY>0 THEN VS(I)=VS(I)*10
1230 IF YY<0 THEN VS(I)=VS(I)/10
1240 NEXT II:REM ERSATZ FUER VS(I)=10^YY
1250 NEXT I
1260 ZP(1)=0.001
1270 FOR I=2 TO 7:ZP(I)=ZP(I-1)*10
1280 NEXT I
1290 NA$=" "
1300 FOR I=1 TO INT(HH/2-10):NA$=NA$+" "
1310 NEXT I
1320 REM ######## MENU ##########
