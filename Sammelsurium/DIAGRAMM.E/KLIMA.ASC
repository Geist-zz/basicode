1660 PRINT MA$(MA);
1670 PRINT"                  "
1680 FOR X=1 TO LEN(MA$(MA))
1690 PRINT"-";
1700 NEXT X
1710 HO=0:VE=19:GOSUB 110
1720 INPUT"Niederschlag (cm)  ";NS(MA)
1730 IF NS(MA)>40 THEN NS(MA)=40
1740 IF NS(MA)<0 THEN 1710
1750 INPUT"Temperatur (C)";TE(MA)
