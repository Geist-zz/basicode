2090 PRINT "geef naam ";I;" ";
2100 INPUT NA$(I)
2110 IF LEN(NA$(I))>10 THEN NA$(I)=LEFT$(NA$(I),10)
2120 HO=23:GOSUB 110
2130 PRINT "                ":GOSUB 110
2140 INPUT "met waarde ";AA(I)
2150 IF AA(I)<=0 THEN 2120
2160 SO=SO+INT(AA(I)*100)/100
2170 NEXT I
2180 FOR I=1 TO N:AA(I)=AA(I)/SO*P*2:NEXT I
