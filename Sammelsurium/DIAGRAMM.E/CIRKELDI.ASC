2000 REM INITIALISEREN
2010 M=0.5:P=3.141592:SO=0
2020 R=0.39:CN=0:X1=M+0.75*R*SIN(0):Y1=M-R*COS(0)
2030 SP$="                                       "
2040 INPUT " Overzichtsnaam  ";ZI$
2050 INPUT "aantal segmenten ";N
2060 DIM AA(N),NA$(N)
2070 FOR I=1 TO N
